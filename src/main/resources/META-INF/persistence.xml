<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
					    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	<persistence-unit name="my_shop" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="Maxim" />
			<property name="hibernate.connection.password" value="Maxim12052008" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/magazine" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.id.new_generator_mappings" value="false" />
		</properties>
	</persistence-unit>
</persistence>